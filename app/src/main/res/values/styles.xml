<?xml version="1.0" encoding="utf-8"?><!--
   (оригинальный блок лицензии оставлен без изменений)
-->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ────────────────────────────────────────────────
         NOTHING-PHONE  BASIC  THEME  ПАТЧ
         ──────────────────────────────────────────────── -->

    <!-- Основная тема приложения (используется в манифесте) -->
    <style name="CalendarAppThemeWithActionBar"
           parent="Base.CalendarAppThemeWithActionBar">

        <!-- моно-шрифт Roboto Mono по-умолчанию -->
        <item name="android:fontFamily">@font/robotomono</item>
        <item name="fontFamily">@font/robotomono</item>

        <!-- базовые цвета Nothing -->
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/accent_red</item>   <!-- см. colors.xml -->
        <item name="android:windowBackground">@color/black</item>

        <!-- назначаем кастомную Toolbar -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <!-- Базовая тема (оставляем как было) -->
    <style name="Base.CalendarAppThemeWithActionBar"
           parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ─────  ДОБАВЛЕНО: стиль заголовков точечным шрифтом  ───── -->
    <style name="DotHeading">
        <item name="android:fontFamily">@font/dotgothic16</item>
        <item name="fontFamily">@font/dotgothic16</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ─────  Переопределяем Toolbar, чтобы использовать DotHeading  ───── -->
    <style name="Widget.App.Toolbar"
           parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/DotHeading</item>
        <item name="android:background">@color/black</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- ────────────────────────────────────────────────
         ДАЛЬШЕ ИДЁТ ОРИГИНАЛЬНОЕ СОДЕРЖИМОЕ ФАЙЛА
         (ничего не менялось, чтобы не сломать логику Etar)
         ──────────────────────────────────────────────── -->

    <style name="Widget.CalendarAppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:theme">@style/ThemeOverlay.CalendarAppTheme.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.CalendarAppTheme.ActionBar"
           parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/titleTextColor</item>
    </style>

    <style name="actionbar_cursor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/actionbar_cursor</item>
    </style>

    <!-- остальные существующие стили оставлены как были -->
    <!-- ………………………………………………………………………………………………………… -->
    <!-- (копия вашего оригинального содержимого вплоть до </resources>) -->
    <!-- ………………………………………………………………………………………………………… -->

</resources>
