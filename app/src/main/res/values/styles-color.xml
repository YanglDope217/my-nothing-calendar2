        <item name="colorAccent">@color/accent_violet</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <!-- 3. Чёрный фон без полу-тона (если нужен) -->
    <style name="colorBackgroundBlack">
        <item name="android:colorBackground">@color/black</item> <!-- был bg_black -->
    </style>

